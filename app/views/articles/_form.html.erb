<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
      <h3 class="text-center"><%= defined?(title) ? title : 'Adding New Article' %></h3>
        <%= form_for(@article, :html => { role: 'form' }) do |f| %>
          <% if @article.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <p>
                <%= pluralize(@article.errors.count, "error") %>
                prohibed this article from being saved:
              </p>
              <ul>
                <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>

          <div class="form-group row">
            <div class="col-sm-3 col-md-2">
              <%= f.label :title, class: 'col-form-label float-right' %>
            </div>
            <div class="col-sm-9 col-md-10">
              <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-3 col-md-2">
              <%= f.label :body, class: 'col-form-label float-right' %>
            </div>
            <div class="col-sm-9 col-md-10">
              <%= f.text_area :body, class: 'form-control', placeholder: 'Body of article', autofocus: true, rows: 3 %>
            </div>
          </div>

          <div class="form-group row">
            <div class="control-label col-sm-12">
              <%= f.submit class: 'btn btn-primary btn-lg float-right' %>
              <%= link_to 'Cancel', :articles, class: 'btn btn-outline-secondary btn-lg float-right mr-2' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>