<% @title = "Sign up" %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
      <h3 class="text-center">Sign up</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group row">
            <div class="col-sm-3 col-md-2">
              <%= f.label :email, class: 'col-form-label float-right' %><br />
            </div>
            <div class="col-sm-9 col-md-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-3 col-md-2">
              <%= f.label :password, class: 'col-form-label float-right' %>
            </div>
            <div class="col-sm-9 col-md-10">
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>
            
          </div>

          <div class="form-group row">
            <div class="col-sm-3 col-md-2">
              <%= f.label :password_confirmation, class: 'col-form-label float-right lg-label' %><br />
            </div>
            <div class="col-sm-9 col-md-10">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>

          <div class="col-sm-12">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-lg float-right' %>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
