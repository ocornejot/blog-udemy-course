<% @title = "Articles" %>

<%= link_to "New Article", new_article_path, class: 'btn btn-primary btn-lg', id: 'new-article-btn' %>

<% if @articles.empty? %>
  <h1 id="no-articles">No Articles Created</h1>
<% else %>
  <% @articles.each do |article| %>
  <div class="card mt-2">
    <div class="card-body">
      <h5><%= link_to article.title, article_path(article) %></h5>
      <p>
        <%= truncate(article.body, length: 300) %>
      </p>

      <small>Created by: <%= article.user.email %></small>
    </div>
  </div>
  <% end %>
<% end %>